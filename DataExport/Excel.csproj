<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.1;netcoreapp3.1;net5.0</TargetFrameworks>
    <AssemblyName>Flexerant.DataExport.Excel</AssemblyName>
    <RootNamespace>Flexerant.DataExport.Excel</RootNamespace>
    <Company>Flexerant</Company>
    <Product>Flexerant.DataExport</Product>
    <Description>A utility for serializing POCO collections to Excel.</Description>
    <PackageProjectUrl>https://github.com/flexerant/DataExport</PackageProjectUrl>
    <RepositoryUrl>https://github.com/flexerant/DataExport</RepositoryUrl>
    <PackageLicenseFile></PackageLicenseFile>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="CellFormatAttribute.cs" />
    <Compile Remove="ExcelCellFormatAttribute.cs" />
    <Compile Remove="ExcelColumnAttribute.cs" />
    <Compile Remove="ExtensionMethods.cs" />
    <Compile Remove="ReportColumnOrderAttribute.cs" />
    <Compile Remove="ReportProperty.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DocumentFormat.OpenXml" Version="2.11.3" />
    <PackageReference Include="NPOI" Version="2.5.1" />
  </ItemGroup>

</Project>
